    "db_user": {
      "type": "string",
      "default": "root"
    },
    "db_pass": {
      "type": "string",
      "default": ""
    },
    "db_charset": {
      "type": "string",
      "default": "utf8"
    },
    "db_collation": {
      "type": "string",
      "default": "utf8_unicode_ci"
