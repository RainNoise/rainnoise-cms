  "cfg": {
    "defaultModule": {
      "type": "string",
      "default": "Page"
    },
    "debug_mode": {
      "type": "boolean",
      "default": false
    },
    "db_driver": {
      "type": "string",
      "default": "mysql"
    },
    "db_host": {
      "type": "string",
      "default": false
    },
    "db_name": {
      "type": "string",
      "default": false
